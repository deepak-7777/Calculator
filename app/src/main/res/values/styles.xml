<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="CalcButton">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">70dp</item>
        <item name="android:layout_columnWeight">1</item>
        <item name="android:layout_rowWeight">1</item>
        <item name="android:backgroundTint">#333333</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">18sp</item>
        <item name="android:stateListAnimator">@null</item> <!-- removes button shadow -->
    </style>

    <!-- Custom Popup Menu Background -->
    <style name="CustomPopupMenu" parent="Widget.AppCompat.PopupMenu.Overflow">
        <item name="android:popupBackground">@drawable/menu_bg_black</item>
    </style>

</resources>